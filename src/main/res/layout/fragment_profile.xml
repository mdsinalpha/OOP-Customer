<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="120dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/boy"
                android:layout_height="120dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/vazir_bold"
                android:textSize="14sp"
                android:text="نام کاربری"/>

        <EditText
                android:id="@+id/p_usernameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:inputType="text"
                android:fontFamily="@font/vazir"
                android:imeOptions="actionNext"
                android:layout_marginEnd="20dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/vazir_bold"
                android:textSize="14sp"
                android:text="ایمیل"/>


        <EditText
                android:id="@+id/p_emailTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="xyz@email.com"
                android:imeOptions="actionNext"
                android:fontFamily="@font/vazir"
                android:inputType="textEmailAddress"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/vazir_bold"
                android:textSize="14sp"
                android:text="رمز فعلی"/>

        <EditText
                android:id="@+id/p_current_passTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/vazir"
                android:layout_marginEnd="20dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/vazir_bold"
                android:textSize="14sp"
                android:text="رمز جدید"/>

        <EditText
                android:id="@+id/p_new_passTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/vazir"
                android:layout_marginEnd="20dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/vazir_bold"
                android:textSize="14sp"
                android:text="ورود مجدد رمز جدید"/>

        <EditText
                android:id="@+id/p_re_passTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/vazir"
                android:layout_marginEnd="20dp"
        />
        <Button
                android:id="@+id/saveProBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="ذخیره اطلاعات"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/vazir_bold"
                android:background="@drawable/round_primary"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_marginEnd="20dp"/>

    </LinearLayout>
</ScrollView>
