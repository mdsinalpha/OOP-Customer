<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="1dp"
            app:civ_border_color="#000"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:src="@drawable/shoe"
            android:id="@+id/li_basket_img" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/li_basket_name"/>
    <TextView
            style="@style/app_theme.text"
            android:text="نام محصول:"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/li_basket_name_t" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/li_basket_img" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="textStart"
    />
    <TextView
            style="@style/app_theme.text.title"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/li_basket_name"
            app:layout_constraintTop_toBottomOf="@+id/li_basket_name_t" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/li_basket_img" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="textStart"
    />
    <TextView
            style="@style/app_theme.text"
            android:text="رنگ:"
            android:gravity="center"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/li_basket_color_t"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/li_basket_img"
            app:layout_constraintStart_toStartOf="@+id/li_basket_img"
            app:layout_constraintBottom_toBottomOf="@+id/li_basket_color" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            style="@style/app_theme.text.title"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/li_basket_color" app:layout_constraintEnd_toStartOf="@+id/li_basket_color_t"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/li_basket_name" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="textStart"
    />
    <TextView
            android:text="تعداد:"
            android:textSize="20sp"
            style="@style/app_theme.text"
            android:textAlignment="textStart"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/li_basket_cnt_t"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/li_basket_color_t"
            app:layout_constraintStart_toStartOf="@+id/li_basket_color_t" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/li_basket_cnt"/>

    <com.shawnlin.numberpicker.NumberPicker
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/li_basket_color"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/li_basket_cnt_t" android:layout_marginEnd="8dp"
            android:id="@+id/li_basket_cnt"
            app:np_orientation="horizontal"
            app:np_dividerColor="@color/colorPrimary"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_selectedTextSize="25sp"
            app:np_textColor="@color/colorSubtitle"
            app:np_textSize="20sp"
            app:np_value="1"
    />
    <TextView
            android:text="قیمت:"
            android:textSize="20sp"
            style="@style/app_theme.text"
            android:textAlignment="textStart"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/li_basket_price_t" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/li_basket_cnt_t" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/li_basket_cnt_t"
            app:layout_constraintBottom_toBottomOf="@+id/li_basket_price"/>
    <TextView
            style="@style/app_theme.text.title"
            android:textAlignment="textStart"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/li_basket_price" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/li_basket_cnt" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/li_basket_price_t" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>